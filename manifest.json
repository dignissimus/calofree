{

  "manifest_version": 2,
  "name": "Calofree",
  "version": "1.0",

  "description": "Hides calorie information on websites",

  "icons": {
    "48": "icons/new-icon-48.png",
    "128": "icons/new-icon-128.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/calofree.js"]
    }
  ],

  "browser_action": {
      "default_icon": "icons/calofree-48.png",
      "default_title": "Calofree",
      "default_popup": "src/calofree.html"
  }

}
